{
  "name": "spotify-overlay-player",
  "version": "1.0.0",
  "description": "Кастомный плеер-оверлей для Windows, активируется при сворачивании Spotify",
  "main": "public/electron.js",
  "scripts": {
    "start": "npx electron .",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "react-scripts test",
    "electron": "npx electron .",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && npx electron . --dev\"",
    "electron-pack": "electron-builder --dir",
    "preelectron-dist": "npm run build",
    "electron-dist": "electron-builder",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux",
    "build:portable": "npm run build && electron-builder --win portable",
    "publish": "npm run build && electron-builder --publish=always",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "spotify",
    "overlay",
    "player",
    "windows",
    "react",
    "tailwindcss"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.0",
    "@tailwindcss/forms": "^0.5.3",
    "electron": "^25.0.0",
    "axios": "^1.4.0",
    "express": "^4.18.0",
    "electron-is-dev": "^2.0.0",
    "electron-window-state": "^5.0.3"
  },
  "devDependencies": {
    "@types/react": "^18.0.37",
    "@types/react-dom": "^18.0.11",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.0.0",
    "electron-builder": "^24.0.0",
    "electron-updater": "^6.1.0",
    "postcss": "^8.4.24",
    "react-scripts": "5.0.1",
    "tailwindcss": "^3.3.0",
    "vite": "^4.3.9",
    "wait-on": "^7.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "homepage": "./"
}
